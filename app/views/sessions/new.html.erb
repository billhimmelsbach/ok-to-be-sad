<%= render :partial => "layouts/flash_messages"%>
<h2><strong>Login!</strong></h2>
<br><br>
<div class="col-md-4 col-md-offset-4">
  <div class="NewLogin">
      <%= bootstrap_form_for @user, url: create_session_path do |f| %>
      <%= f.text_field :email, placeholder: 'Email' %>
      <%= f.password_field :password, placeholder: 'Password' %>
      <br>
      <div class="CreateButton">
        <button class="btn btn-success btn-primary" type="submit">
          <i class="fa fa-sign-in fa-4x" aria-hidden="true"></i>
        </button>
      </div>
      <br><br>
      <p>Don't have an account? Please <%= link_to "sign up!", new_user_path %> </p>
      <% end %>
      <br><br>
    </div>
  </div>
</div>
