<!DOCTYPE html>
<html>
<head>
  <title>OkToBeSad</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.4/css/bootstrap.min.css" integrity="2hfp1SzUoho7/TsGGGDaFdsuuDL0LX2hnUp6VkX3CUQ2K4K+xjboZdsXyp4oUHZj" crossorigin="anonymous">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.4/js/bootstrap.min.js" integrity="VjEeINv9OSwtWFLAtmc4JCtEJXXBub00gtSnszmspDLCtC0I4z4nqz7rEFbIZLLU" crossorigin="anonymous"></script>
</head>
<body>
  <h1> Test <%= test_if_it_works %> </h1>

  <%= yield %>
      <%= link_to :back %>

  <div class="col-xs-12 navbar navbar-fixed-bottom bottom-nav-div">
    <div class="row" id="bottomNav">
      <% if current_user %>
        <div class="col-xs-3 text-center">
          <%= link_to :back do %><br>
            <i class="glyphicon glyphicon-chevron-left"></i>
          <% end %>
        </div>
        <div class="col-xs-3 text-center">
          <%= link_to root_path do %><br>
            <i class="glyphicon glyphicon-home"></i>
          <% end %>
        </div>
        <div class="col-xs-3 text-center">
          <%= link_to new_article_path do %><br>
            <i class="glyphicon glyphicon-plus"></i>
          <% end %>
        </div>
        <div class="col-xs-3 text-center">
          <%= link_to user_path(current_user) do %><br>
            <i class="glyphicon glyphicon-user"></i>
          <% end %>
        </div>
      <% else %>
        <div class="col-xs-3 text-center">
          <%= link_to :back do %><br>
            <i class="glyphicon glyphicon-chevron-left"></i>
          <% end %>
        </div>
        <div class="col-xs-3 text-center">
          <%= link_to root_path do %><br>
            <i class="glyphicon glyphicon-home"></i>
          <% end %>
        </div>
        <div class="col-xs-3 text-center">
          <%= link_to new_session_path do %><br>
            <i class="glyphicon glyphicon-plus"></i>
          <% end %>
        </div>
        <div class="col-xs-3 text-center">
          <%= link_to new_session_path do %><br>
            <i class="glyphicon glyphicon-log-in"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</body>
</html>
