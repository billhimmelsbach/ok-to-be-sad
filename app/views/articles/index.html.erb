<%= render :partial => "layouts/flash_messages"%>
<div class="col-xs-12">
  <% if current_user == nil %>
    <h1> NO USER </h1>
  <% end %>
  <div class="newusertext">
    <% if current_user == nil %>
      <h1 class="text-center splash-title">Ok To Be Sad</h1>
      <h2 class="text-center splash-title2">A Community When You Need It The Most</h2>
    <% end %>
  </div>
  <div class="owl-carousel owl-theme" style="height:100px;">
    <div> <h1>Welcome to It's Ok To Be Sad</h1> <a href="https://www.google.com">Test</a></div>
    <div class="item-video" style="height:90vh"><a class="owl-video" href="https://www.youtube.com/watch?v=eNHDG-2w1xo"></a></div>
    <% @articles.each do |article| %>
      <div> <img src="<%= article.content %>"> <h1><%= article.title %></div>
    <% end %>
    <div> <h1>Welcome to It's Ok To Be Sad</h1> </div>
  </div>
  <% if @articles %>
    <% @articles.each do |article| %>
      <%= link_to article_path(article) do %>
        <div class="column col-xs-12 col-s-6 col-md-6 col-lg-4" style="padding: 3px">
          <div class="card card-inverse image-index" style="background-image: url('<%=article.content %>')">
          </div>
        </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
