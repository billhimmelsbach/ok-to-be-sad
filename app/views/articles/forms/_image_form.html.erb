<div class = "col-md-4 col-md-offset-4">
  <div class = "NewArticle">
    <%= bootstrap_form_for @article do |f| %>
      <%= f.text_field :title, placeholder: 'The Best Cat Photo Ever Taken', maxlength: 75, required: true%>
      <%= f.uploadcare_uploader :content, :data => {:images_only => true, :image_shrink => "800x800", :clearable => true } %>
      <%= f.hidden_field :content_type, :value => "image" %>
      <br>
      <div class="text-center">
        <%= f.submit @article.new_record? ? "Upload Image" : "Update Image", class: "btn btn-success btn-default btn-md"%>
        <span style="margin-right:30px;"></span>
        <%= button_to "Cancel", :back, method: :get, :class=>"ruby-link btn btn-info btn-default btn-md inline", :onclick => "window.history.go(-1)" %>
      </div>
    <% end %>
  </div>
</div>
