<div class = "col-md-4 col-md-offset-4">
  <div class = "NewArticle">
    <%= bootstrap_form_for @article do |f| %>
      <%= f.text_field :title, placeholder: 'Countdown by BeyoncÃ©', maxlength: 75, required: true %>
      <%= f.text_field :content, placeholder: 'https://open.spotify.com/track/1ljzHUgt2SU2ADkhfa9eBC', required: true %>
      <%= f.hidden_field :content_type, :value => "song" %>
      <br>
      <div class="text-center">
        <%= f.submit @article.new_record? ? "Upload Song" : "Update Song", class: "btn btn-success btn-default btn-md"%>
        <span style="margin-right:30px;"></span>
        <%= button_to "Cancel", :back, method: :get, :class=>"ruby-link btn btn-info btn-default btn-md inline", :onclick => "window.history.go(-1)" %>
      </div>
    <% end %>
  </div>
</div>
