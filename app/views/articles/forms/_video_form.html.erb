<div class = "col-md-4 col-md-offset-4">
  <div class = "NewArticle">
    <%= bootstrap_form_for @article do |f| %>
      <%= f.text_field :title, placeholder: 'Dogs Learning to Howl', maxlength: 75, required: true %>
      <%= f.text_field :content, placeholder: 'https://www.youtube.com/watch?v=eNHDG-2w1xo', required: true %>
      <%= f.hidden_field :content_type, :value => "video" %>
      <br><br>
      <div class = "EditButton">
        <%= f.submit @article.new_record? ? "Create Post" : "Update Post"%>
      </div>
    <% end %>
    <div class = "CancelButton">
      <%= button_to "Cancel", :back, method: :get, :class=>"ruby-link btn btn-info btn-default btn-md inline" %>
    </div>
    <br><br>
  </div>
</div>
